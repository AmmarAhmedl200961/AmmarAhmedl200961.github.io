---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Ammar Ahmed | Data Scientist & AI Developer",
  description = "Ammar Ahmed - Data Scientist specializing in NLP, Machine Learning, and AI Development. Portfolio showcasing projects in Credit Card Fraud Detection, Medical QA, and Film Recommendation Systems."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="mask-icon" href="/favicon.svg" color="#2a9d8f" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline>
      // Redirect from old username to new username
      (function() {
        const oldHostname = 'ammarahmedl200961.github.io';
        const newHostname = 'ammarahm3d.github.io';
        if (window.location.hostname.toLowerCase() === oldHostname) {
          const newUrl = window.location.href.replace(oldHostname, newHostname);
          document.write('<div style="position:fixed;top:0;left:0;right:0;bottom:0;background:#0f172a;color:#00ff88;display:flex;flex-direction:column;align-items:center;justify-content:center;font-family:system-ui,sans-serif;z-index:9999;"><p style="font-size:1.5rem;margin-bottom:1rem;">Redirecting to new site...</p><p style="font-size:1rem;opacity:0.8;">The site has moved to ' + newHostname + '</p></div>');
          setTimeout(function() {
            window.location.replace(newUrl);
          }, 1500);
        }
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
